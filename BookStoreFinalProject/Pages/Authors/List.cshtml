@page
@model BookStoreFinalProject.Pages.Authors.List


<!DOCTYPE html>

<html>
<head>
    <title></title>
</head>
<body>
<div>
    <h2>Authors</h2>

    <table class="table">
        <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Gender</th>
            <th scope="col">Address</th>
            <th scope="col">Operations</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var author in @Model.Authors)
        {
            <tr>
                <th scope="row">@author.Id</th>
                <td>@author.Name</td>
                <td>@author.Email</td>
                <td>@author.Gender</td>
                <td>@author.Address</td>
                <td>
                    <div class="btn-group">
                        <a asp-page="./Detail" asp-route-authorId="@author.Id" class="btn btn-primary">
                            <i class="bi bi-zoom-in"></i>

                        </a>
                        <a asp-page="./Edit" class="btn btn-success" asp-route-authorId="@author.Id">
                            <i class="bi bi-pencil-square"></i>

                        </a>
                        <a asp-page="./Delete" class="btn btn-danger" asp-route-authorId="@author.Id">
                            <i class="bi bi-x-square"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
    
    <a class="btn btn-primary" asp-page="./Add">Add Author</a>
</div>
</body>
</html>